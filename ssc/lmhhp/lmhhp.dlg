VERSION 11.0
INCLUDE _std_large
DEFINE _dlght 150
INCLUDE header
HELP hlp1, view("help lmhhp")
RESET res1

DIALOG main, label("lmhhp - OLS Heteroscedasticity Hall-Pagan Test") ///
	tabtitle("Main")
BEGIN
 DEFINE _x _xsetbu
 DEFINE _y _top
 INCLUDE _bu_tsset
  
 TEXT tx_yvar	_lft	+30	120	., ///
	label("Dependent Variable:")
 TEXT tx_xvar	_vlx	@	300	., ///
	label("Independent Variables:")

 VARNAME vn_yvar  _lft	 _ss	120 .,	 ///
	label("Dependent Variable")
 VARLIST vl_xvar  _vlx	 @	300 ., ///
	label("Independent Variables")

  CHECKBOX ck_nocons @         _ms       @         .,	/*
		*/ label("No Constant")	/*
		*/ option("noconstant")			/*
*/
END

INCLUDE ifin

PROGRAM command
BEGIN
 put "lmhhp "
 varlist main.vn_yvar main.vl_xvar 
 put " " /program ifin_output
 beginoptions
 option main.ck_nocons
 endoptions
END
